@implements IDisposable
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="nav-menu-container @(collapseNavMenu ? "collapsed" : "")">
<!-- Верхняя шапка меню с кнопкой сворачивания -->
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid d-flex align-items-center">
        <!-- Название или Логотип (скрываем при сворачивании) -->
            <a class="navbar-brand" href="">News</a>

        <!-- Кнопка гамбургер для сворачивания/разворачивания -->
            <button title="Меню" class="navbar-toggler-custom" @onclick="ToggleNavMenu">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z" />
                </svg>
            </button>
    </div>
</div>

<!-- Само меню -->
<div class="@NavMenuCssClass nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span>
                <span class="nav-text @(collapseNavMenu ? "d-none" : "")">Главная</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="settings">
                <span class="bi bi-gear-fill" aria-hidden="true"></span>
                <span class="nav-text @(collapseNavMenu ? "d-none" : "")">Настройки</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="auth">
                <span class="bi bi-lock-fill" aria-hidden="true"></span>
                <span class="nav-text @(collapseNavMenu ? "d-none" : "")">Доступ</span>
            </NavLink>
        </div>

        <div class="dropdown-divider border-secondary my-2"></div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Manage">
                        <span class="bi bi-person-circle" aria-hidden="true"></span>
                        <span class="nav-text @(collapseNavMenu ? "d-none" : "")">@context.User.Identity?.Name</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />

                        <!-- Используем класс btn-link-reset, чтобы кнопка выглядела как ссылка -->
                        <button type="submit" class="nav-link w-100 text-start btn-link-reset">
                            <span class="bi bi-box-arrow-left" aria-hidden="true"></span>
                            <span class="nav-text @(collapseNavMenu ? "d-none" : "")">Выйти</span>
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Register">
                        <span class="bi bi-person-plus" aria-hidden="true"></span>
                        <span class="nav-text @(collapseNavMenu ? "d-none" : "")">Регистрация</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span>
                        <span class="nav-text @(collapseNavMenu ? "d-none" : "")">Войти</span>
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>
</div>
@code {
    private bool collapseNavMenu = false; // По умолчанию меню открыто
    private string? currentUrl;

    // Этот класс меняет ширину меню в CSS
    private string NavMenuCssClass => collapseNavMenu ? "collapse-menu" : "";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
